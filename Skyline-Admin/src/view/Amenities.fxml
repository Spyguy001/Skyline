<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.paint.*?>
<?import javafx.scene.text.*?>

<?import javafx.collections.FXCollections?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<AnchorPane fx:id="rootPane" prefHeight="200" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controller.AmenitiesController">
    <fx:define>
        <Double fx:id="WIDTH" fx:value="1024.0"/>
        <Double fx:id="HEIGHT" fx:value="576.0"/>
    </fx:define>
    <children>
        <GridPane style="-fx-background-color: #ABAFDF;" prefWidth="$WIDTH" hgap="10">
            <columnConstraints>
                <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="10.0"
                                   prefWidth="${WIDTH * 0.15}"/>
                <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="10.0"
                                   prefWidth="${WIDTH * 0.15}"/>
                <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="10.0"
                                   prefWidth="${WIDTH * 0.35}"/>
                <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="10.0"
                                   prefWidth="${WIDTH * 0.35}"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="${HEIGHT * 0.1}" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="${HEIGHT * 0.1}" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="${HEIGHT * 0.1}" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="${HEIGHT * 0.1}" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="${HEIGHT * 0.1}" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="${HEIGHT * 0.1}" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="${HEIGHT * 0.1}" vgrow="SOMETIMES"/>
            </rowConstraints>
            <children>
                <Label style="-fx-text-fill: white;" text="Name:    " GridPane.rowIndex="0"
                       GridPane.halignment="RIGHT"/>
                <TextField fx:id="name" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
                <Label style="-fx-text-fill: white;" text="Details:    " GridPane.rowIndex="1"
                       GridPane.halignment="RIGHT" GridPane.rowSpan="2" GridPane.valignment="CENTER"/>
                <TextArea fx:id="details" wrapText="true" GridPane.columnIndex="1" GridPane.rowIndex="1" GridPane.rowSpan="2"/>
                <Label style="-fx-text-fill: white;" text="Bookable:    " GridPane.rowIndex="3" GridPane.halignment="RIGHT"/>
                <StackPane GridPane.hgrow="ALWAYS" GridPane.vgrow="ALWAYS" GridPane.rowIndex="3" GridPane.columnIndex="1">
                    <CheckBox fx:id="bookable"
                              GridPane.halignment="CENTER" GridPane.valignment="CENTER" onAction="#isBookable"/>
                </StackPane>
                <Label style="-fx-text-fill: white;" text="From:    " GridPane.rowIndex="4"
                       GridPane.halignment="RIGHT"/>
                <HBox alignment="CENTER_LEFT" GridPane.columnIndex="1" GridPane.rowIndex="4">
                    <TextField fx:id="timeFrom" promptText="hh:mm" disable="true"/>
                    <ChoiceBox styleClass="button-utility" fx:id="amPmFrom" value="PM" disable="true">
                        <items>
                            <FXCollections fx:factory="observableArrayList">
                                <String fx:value="PM" />
                                <String fx:value="AM" />
                            </FXCollections>
                        </items>
                    </ChoiceBox>
                </HBox>
                <Label style="-fx-text-fill: white;" text="To:    " GridPane.rowIndex="5"
                       GridPane.halignment="RIGHT" GridPane.valignment="CENTER"/>
                <HBox alignment="CENTER_LEFT" GridPane.columnIndex="1" GridPane.rowIndex="5">
                    <TextField fx:id="timeTo" promptText="hh:mm" disable="true"/>
                    <ChoiceBox styleClass="button-utility" fx:id="amPmTo" value="PM" disable="true">
                        <items>
                            <FXCollections fx:factory="observableArrayList">
                                <String fx:value="PM" />
                                <String fx:value="AM" />
                            </FXCollections>
                        </items>
                    </ChoiceBox>
                </HBox>

                <Button styleClass="button-utility" mnemonicParsing="false" text="Add Amenity" onAction="#addAmenity"
                        GridPane.rowIndex="6" GridPane.halignment="CENTER"/>
                <Button styleClass="button-utility" mnemonicParsing="false" text="Remove Amenity" onAction="#removeAmenity"
                        GridPane.rowIndex="6" GridPane.columnIndex="1" GridPane.halignment="CENTER"/>

                <TableView fx:id="amenitiesTable" prefHeight="${HEIGHT * 0.48}" GridPane.columnIndex="2"
                           GridPane.columnSpan="2" GridPane.rowSpan="7">
                    <columns>
                        <TableColumn fx:id="nameCol" text="Title" prefWidth="${WIDTH * 0.20}">
                            <cellValueFactory><PropertyValueFactory property="name" />
                            </cellValueFactory>
                        </TableColumn>
                        <TableColumn fx:id="detailsCol" text="Description" prefWidth="${WIDTH * 0.50}">
                            <cellValueFactory><PropertyValueFactory property="details" />
                            </cellValueFactory>
                        </TableColumn>
                    </columns>
                    <items>
                        <FXCollections fx:factory="observableArrayList">
                        </FXCollections>
                    </items>
                    <placeholder>
                        <Label text="There are currently no amenities."/>
                    </placeholder>
                </TableView>
            </children>
        </GridPane>
    </children>
</AnchorPane>